html, body
  height 100%
  margin 0
  padding 0
  width 100%

body
  background transparent
  font-family Lato, h, 'Helvetica Neue', 'PingFang SC', 'Microsoft YaHei', sans-serif
  font-size 16px
  line-height 1.625
  margin 0
  overflow hidden
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased

a
  color #369
  text-decoration none

  &:hover
    color #f40
