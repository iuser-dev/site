@import './main.styl'

u-auth
  background #fff
  border-radius 4px
  box-shadow 0 0 3px rgba(0, 0, 0, 0.2)
  padding 2em 2em 1.5em
  width 19em

  [slot=logo]
    background url(':/svg/logo.svg') 51% 51% / 89% no-repeat
    border 5px solid #f00
    border-radius 3.2em
    flex-shrink 0
    height 2.6em
    margin-right 0.5em
    margin-top -0.7em
    padding 0.4em
    width 2.6em

  [slot=org]
    align-items center
    color #f00
    display flex
    flex 1
    flex-direction column
    text-align center

    &>b
      font-family J, h

    &>b:first-child
      font-size 2.6em
      letter-spacing 3px
      margin-bottom -0.3em
      margin-top -0.2em

    &>b:last-child
      font-size 1.05em
      height 1.2em
      line-height @height
      margin-bottom 0.5em

      &>i
        color #f00
        font-style normal
        margin 0
        text-align center

      &>span
        position relative
        top -2px

.I18Nnso
  u-auth
    [slot=org]
      &>b:last-child
        font-size 15px

.I18Nen
  u-auth
    [slot=org]
      &>b:last-child
        letter-spacing 1px

.I18Nzh, .I18Nzh-TW
  u-auth
    [slot=org]
      &>b:last-child
        letter-spacing 5px
